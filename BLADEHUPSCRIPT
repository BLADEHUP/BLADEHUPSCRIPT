local FlowTab = Window:NewTab("Flow")
local FlowSection = FlowTab:NewSection("Select Flow")

local function setFlow(flow)
    if player:FindFirstChild("PlayerStats") and player.PlayerStats:FindFirstChild("Flow") then
        player.PlayerStats.Flow.Value = flow
    end
end

FlowSection:NewButton("Soul Harvester", "Activate Soul Harvester flow", function()
    setFlow("Soul Harvester")
end)

